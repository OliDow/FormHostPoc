<Window x:Class="FormHostPoc.Views.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converter="clr-namespace:FormHostPoc.Converter"
        Title="ShellView" WindowStyle="None" ResizeMode="CanResizeWithGrip" 
        Top="600" Left="800"
         Width="{Binding WindowWidth, Mode=TwoWay}" 
        Height="{Binding WindowHeight, Mode=TwoWay}">
    
    <Window.Resources>
        <converter:BoolToVisConverter x:Key="BoolToVisConverter"></converter:BoolToVisConverter>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Text="{Binding MainTitle}" Grid.Row="0" />
        <StackPanel Grid.Row="1">
            <TextBlock Text="{Binding BreadCrumb}" />
            <TextBlock Text="{Binding WindowWidth}" />
            <TextBlock Text="{Binding WindowHeight}" />
        </StackPanel>

        <TextBlock Text="Loading Gif" Foreground="Blue" Grid.Row="2"  Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisConverter}}" />
        <ContentControl Content="{Binding Content}" Grid.Row="2"  Background="Aqua"  Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisConverter}, ConverterParameter=1}" />
    </Grid>
</Window>